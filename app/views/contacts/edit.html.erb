<div class='contact-title'><h3>連絡内容を編集</h3></div>

<%= form_with(model: @contact, local: true) do |form| %>

  <div class="title">
    <%= form.label :subject,"件名" %>
    <div class='form-title'><%= form.text_field :subject %></div>
  </div>

  <div class="content">
    <%= form.label :contents,"内容" %>
    <div class='form-contents'><%= form.text_field :contents %></div>
  </div>

  <div class="submit">
    <%= form.submit "連絡内容を修正" %>
  </div>

<% end %>

<div class='bottan-list bottan-index'><%= link_to '連絡内容一覧に戻る', contacts_path %></div>