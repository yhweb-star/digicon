<div class='contact-title'><h3>連絡内容を登録</h3></div>

<%= form_with(model: @contact, local: true) do |form| %>

<%= render 'shared/error_messages', model: form.object %>

  <div class="title">
    <%= form.label :subject,"件名" %>
    <%= form.text_field :subject %>
  </div>

  <div class="content">
    <%= form.label :contents,"内容" %>
    <%= form.text_field :contents %>
  </div>

  <div class="submit">
    <%= form.submit "連絡内容を追加" %>
  </div>

<% end %>

<div class='bottan-list bottan-index'><%= link_to '連絡内容一覧に戻る', contacts_path %></div>