<div class='contact-title'><h3>行事・イベントを登録</h3></div>

<%= form_with(model: @event, local: true) do |form| %>

<%= render 'shared/error_messages', model: form.object %>

  <div class="field">
    <%= form.label :subject,"件名" , class:"input-label" %><br>
    <%= form.text_field :subject , class:"input-subject" %>
  </div>

  <div class="field">
    <%= form.label :start_time,"開始日時" , class:"input-label" %><br>
    <%= raw sprintf(
          form.datetime_select(
              :start_time,
              use_month_numbers: true,
              date_separator: '%s',
              datetime_separator: '%s'),
            '年 ', '月 ' , '日') %>
  </div>

  <div class="field">
    <%= form.label :ending_time,"終了日時" , class:"input-label" %><br>
    <%= raw sprintf(
          form.datetime_select(
              :ending_time,
              use_month_numbers: true,
              date_separator: '%s',
              datetime_separator: '%s'),
            '年 ', '月 ' , '日') %>
  </div>

  <div class="field">
    <%= form.label :place,"場所" , class:"input-label" %><br>
    <%= form.text_field :place , class:"input-subject" %>
  </div>

  <div class="field">
    <%= form.label :details,"詳細" , class:"input-label" %><br>
    <%= form.text_area :details , rows: 10 , class:"input-contents"%>
  </div>

  <div class="actions">
    <%= form.submit "予定を追加" %>
  </div>

<% end %>

<div class='bottan-list'>
  <div class='bottan-index'><%= link_to '連絡内容一覧に戻る', events_path %></div>
</div>