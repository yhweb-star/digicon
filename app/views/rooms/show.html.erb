<% if user_signed_in? %>
  <h3><%= @school.facility %>とのチャットルーム</h3>
  <div class="chat-field">
    <% @messages.each do |m| %>
      <% if m.is_user %>
        <div class="right-message">
          <div>家庭から</div>
          <div><%= m.updated_at %></div>
          <div><%= m.text %></div>
        </div>
      <% else %>
        <div class="left-message">
          <div>施設から</div>
          <div><%= m.updated_at %></div>
          <div><%= m.text %></div>
        </div>
      <% end %>
    <% end %>
  </div>
<% elsif school_signed_in?%>
  <h3><%= @user.grade %>年 <%= @user.last_name %> <%= @user.first_name %>さんのご家庭とのチャットルーム</h3>
  <div class="chat-field">
    <% @messages.each do |m| %>
      <% if m.is_user %>
        <div class="left-message">
          <div>ご家庭から</div>
          <div><%= m.updated_at %></div>
          <div><%= m.text %></div>
        </div>
      <% else %>
        <div class="right-message">
          <div>施設から</div>
          <div><%= m.updated_at %></div>
          <div><%= m.text %></div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

<%= form_for [@room, @message] do |f| %>
  <%= f.text_field :text %>
  <%= f.submit "メッセージを送る"%>
<% end %>
